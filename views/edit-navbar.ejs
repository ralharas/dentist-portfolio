<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Navbar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/admin/menu">Admin Menu</a>
        </div>
    </nav>

    <div class="container mt-5">
        <h1 class="mb-4">Edit Navbar</h1>

        <!-- Add New Navbar Item -->
        <h3>Add New Navbar Item</h3>
        <form action="/admin/add-navbar" method="POST">
            <div class="mb-3">
                <label for="label" class="form-label">Navbar Item Name</label>
                <input type="text" class="form-control" id="label" name="label" required>
            </div>
            <div class="mb-3">
                <label for="link" class="form-label">Navbar Link</label>
                <input type="text" class="form-control" id="link" name="link" required>
            </div>
            <div class="mb-3">
                <label for="position" class="form-label">Position (1-7)</label>
                <input type="number" class="form-control" id="position" name="position" min="1" max="7" required>
            </div>
            <button type="submit" class="btn btn-success">Add Navbar Item</button>
        </form>

        <!-- Edit Existing Navbar Items -->
        <h3 class="mt-5">Existing Navbar Items</h3>
        <ul class="list-group">
            <% navbar.forEach(item => { %>
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <span><%= item.label %> - <%= item.link %> (Position: <%= item.position %>)</span>
                    <div>
                        <form action="/admin/delete-navbar" method="POST" class="d-inline">
                            <input type="hidden" name="id" value="<%= item.id %>">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

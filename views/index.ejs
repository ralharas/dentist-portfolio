<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= homePage.hero_title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <!-- Header -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand" href="/">
            <% if (homePage.logo_image) { %>
                <img src="<%= homePage.logo_image %>" alt="Logo" style="height: 50px;">
            <% } else { %>
                <span style="font-weight: bold; font-size: 1.5rem;"><%= homePage.logo_text %></span>
            <% } %>
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" 
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <% navbar.forEach(item => { %>
                    <li class="nav-item"><a class="nav-link" href="<%= item.link %>"><%= item.label %></a></li>
                <% }) %>
            </ul>
        </div>
    </div>
</nav>
    <!-- Hero Section -->
    <section class="hero-section text-center py-5 bg-light">
        <div class="container">
            <h1 class="display-4"><%= homePage.hero_title %></h1>
            <p class="lead"><%= homePage.hero_description %></p>
            <a href="<%= homePage.hero_button_link %>" class="btn btn-primary btn-lg"><%= homePage.hero_button_text %></a>
        </div>
    </section>

    <!-- Services Section -->
    <section class="services-section py-5">
        <div class="container">
            <h2 class="text-center mb-5"><%= homePage.services_title %></h2>
            <div class="row">
                <div class="col-md-4 text-center">
                    <h3><%= homePage.service_1_title %></h3>
                    <p><%= homePage.service_1_description %></p>
                </div>
                <div class="col-md-4 text-center">
                    <h3><%= homePage.service_2_title %></h3>
                    <p><%= homePage.service_2_description %></p>
                </div>
                <div class="col-md-4 text-center">
                    <h3><%= homePage.service_3_title %></h3>
                    <p><%= homePage.service_3_description %></p>
                </div>
            </div>
        </div>
    </section>

    <!-- Call to Action Section -->
    <section class="cta-section text-center py-5 bg-primary text-white">
        <div class="container">
            <h2 class="mb-4"><%= homePage.cta_title %></h2>
            <a href="<%= homePage.cta_button_link %>" class="btn btn-light btn-lg"><%= homePage.cta_button_text %></a>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer bg-light py-4">
        <div class="container text-center">
            <% footer.forEach(item => { %>
                <p class="mb-0"><%= item.text %></p>
            <% }) %>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

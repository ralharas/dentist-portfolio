<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Dr. <%= about.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/about.css">
</head>
<body>
    <%- include('partials/header') %>

    <div class="container about-container">
        <div class="profile-header">
            <img src="<%= about.profile_picture %>" alt="<%= about.name %>" class="profile-picture">
            <div class="profile-info">
                <h1><%= about.name %></h1>
                <p class="title"><%= about.title %></p>
                <p class="location"><%= about.location %></p>
            </div>
        </div>

        <section class="about-section">
            <h2>About Dr. <%= about.name %></h2>
            <p><%= about.bio %></p>
        </section>

        <section class="philosophy-section">
            <h2>Professional Philosophy</h2>
            <p><%= about.philosophy %></p>
        </section>

        <section class="education-section">
            <h2>Education</h2>
            <ul>
                <% about.education.split('\n').forEach(item => { %>
                    <li><%= item %></li>
                <% }) %>
            </ul>
        </section>

        <section class="experience-section">
            <h2>Experience</h2>
            <p><%= about.experience %></p>
        </section>

        <section class="skills-section">
            <h2>Skills</h2>
            <div class="skills">
                <% about.skills.forEach(skill => { %>
                    <span class="skill-badge"><%= skill %></span>
                <% }) %>
            </div>
        </section>
    </div>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
